
<div class="item">
  <div>Nome completo </div>
  <div class='input'>
    <input type="text" name="name" placeholder="nome completo" 
    value="{{ user.name }}">
  </div>
</div>

<div class="item">
  <div>Email </div>
  <div class='input'>
    <input type="email" name="email" placeholder="email" 
    value="{{ user.email }}" onblur="Validate.apply(this, 'isEmail')">
  </div>
</div>

<div class="item">
  <div>Senha </div>
  <div class='input'>
    <input type="password" name="password" placeholder="digite sua senha">
  </div>
</div>

{% if not user.id %}

<div class="item">
  <div>Repetir senha </div>
  <div class='input'>
    <input type="password" name="passwordRepeat" 
    {% if not user.id%}
    placeholder="Digite uma senha segura"
    {% else %}
    placeholder="Digite sua senha para atualizar seu cadastro"
    {% endif%}
    >
  </div>
</div>

{% endif %}

<div class="item">
  <div>CPF ou CNPJ </div>
  <div class='input'>
    <input type="text" name="cpf_cnpj" placeholder="digite seu documento" 
    value="{{ user.cpf_cnpj }}" onkeydown="Mask.apply(this, 'cpfCnpj')"
    onblur="Validate.apply(this, 'isCpfCnpj')">
  </div>
</div>

<div class="item">
  <div>CEP</div>
  <div class='input'>
    <input type="text" name="cep" placeholder="99999-999" 
    value="{{ user.cep }}" onkeydown="Mask.apply(this, 'cep')"
    onblur="Validate.apply(this, 'isCep')">
  </div>
</div>

<div class="item">
  <div>Endereço completo</div>
  <div class='input'>
    <input type="text" name="address" placeholder="digite seu endereço completo" 
    value="{{ user.address }}">
  </div>
</div>