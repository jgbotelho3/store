{% extends 'layout.njk' %}

{% import '_parts/card.njk' as card %}
{% block content %}

{% call card.render('Esqueceu a senha?', 'password container') %}

    <form method="POST" action="/users/forgot-password">

    <div class="fields">
        <div class="item">
            <div>Email
            </div>
            <div class='input'>
                <input type="email" name="email" placeholder="usuario@dominio.com.br" value="{{user.email}}" onblur="Validate.apply(this, 'isEmail')">
            </div>
        </div>
    </div>
    <button class="button" type="submit">Recuperar senha</button>
        </form>
    {%endcall%}
{% endblock content %}